#!/bin/sh

# Note: ensure this file sourced after profile

# Command verbosity for safety
alias \
    cp="cp -iv" \
    mv="mv -iv" \
    rm="rm -Iv" \
    mkdir="mkdir -pv"

# Colorize commands
alias \
    l="ls -AhlN --color=auto --group-directories-first" \
    ls="ls --color=auto --group-directories-first" \
    grep="grep --color=auto" \
    ip="ip -color=auto"

# Abbreviate commands
alias \
    fpk="flatpak" \
    g="git" \
    v="$EDITOR"

alias \
    tmux="tmux new-session -s $(basename $(pwd))"
